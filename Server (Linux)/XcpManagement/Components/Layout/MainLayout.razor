@inherits LayoutComponentBase
@inject IVmCacheService VmCache

<Layout Style="min-height: 100vh;">
    <Sider Collapsible Width="200">
        <div class="logo" style="height: 64px; display: flex; align-items: center; justify-content: center; color: white; font-size: 20px; font-weight: bold;">
            XCP-ng
        </div>
        <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline" DefaultSelectedKeys="@(new[]{"1"})">
            <MenuItem Key="1" RouterLink="/" RouterMatch="NavLinkMatch.All">
                <Icon Type="dashboard" Theme="outline" />
                Dashboard
            </MenuItem>
            <MenuItem Key="2" RouterLink="/hosts">
                <Icon Type="cluster" Theme="outline" />
                XCP Hosts
            </MenuItem>
            <MenuItem Key="3" RouterLink="/vms">
                <Icon Type="desktop" Theme="outline" />
                Virtual Machines
            </MenuItem>
            <MenuItem Key="4" RouterLink="/settings">
                <Icon Type="setting" Theme="outline" />
                Settings
            </MenuItem>
        </Menu>
    </Sider>
    <Layout>
        <Header Style="background: #fff; padding: 0 24px; box-shadow: 0 1px 4px rgba(0,21,41,.08);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h2 style="margin: 0;">XCP-ng Management</h2>
                <Space>
                    <Text>Last refresh: @lastRefresh.ToString("HH:mm:ss")</Text>
                    <Avatar Icon="user" />
                </Space>
            </div>
        </Header>
        <Content Style="margin: 24px 16px; padding: 24px; background: #fff; min-height: 360px;">
            @Body
        </Content>
        <Footer Style="text-align: center;">
            XCP-ng Management Â©2026
        </Footer>
    </Layout>
</Layout>

@code {
    private DateTime lastRefresh;

    protected override void OnInitialized()
    {
        lastRefresh = VmCache.GetLastRefreshTime();
    }
}
